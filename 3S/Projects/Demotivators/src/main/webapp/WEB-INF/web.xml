<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>com.example.demotivators.pages.HelloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.example.demotivators.pages.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>menu</servlet-name>
        <servlet-class>com.example.demotivators.pages.StarterWindowServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usersTable</servlet-name>
        <servlet-class>com.example.demotivators.pages.UsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>memUpload</servlet-name>
        <servlet-class>com.example.demotivators.pages.MemUpload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>displayImage</servlet-name>
        <servlet-class>com.example.demotivators.pages.helpers.DisplayImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>redact</servlet-name>
        <servlet-class>com.example.demotivators.pages.MemRedact</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>scroll</servlet-name>
        <servlet-class>com.example.demotivators.pages.ScrollServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>request</servlet-name>
        <servlet-class>com.example.demotivators.pages.RequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createRequest</servlet-name>
        <servlet-class>com.example.demotivators.pages.RequestCreatorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>friends</servlet-name>
        <servlet-class>com.example.demotivators.pages.FriendsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>collections</servlet-name>
        <servlet-class>com.example.demotivators.pages.CollectionsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addToCollection</servlet-name>
        <servlet-class>com.example.demotivators.pages.AddToCollectionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>displayImage</servlet-name>
        <url-pattern>/images/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>collections</servlet-name>
        <url-pattern>/collections</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addToCollection</servlet-name>
        <url-pattern>/addToCollection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>redact</servlet-name>
        <url-pattern>/memes/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>friends</servlet-name>
        <url-pattern>/friends</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>request</servlet-name>
        <url-pattern>/requests/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createRequest</servlet-name>
        <url-pattern>/createRequest/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>menu</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usersTable</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>memUpload</servlet-name>
        <url-pattern>/mem_upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>scroll</servlet-name>
        <url-pattern>/scroll</url-pattern>
    </servlet-mapping>

</web-app>